choice = input("""Choose your choice :
1.A - NUMBER OF LETTERS IN TEXT
2.B - SORTED BY ALPHABET
Your choice is : """)

def countl(qwe):
    d = {}
    for w in qwe:
        d[w] = qwe.count(w)
    for k in sorted(d):
        print(k + "=" + str(d[k]))

def alphabet(qwe):
    res1 =[]
    for word in qwe.split():
        if len(word) > 1 and word.isalpha():
            if word not in res1:
                res1.append(word)
    userwords = res1
    userwords.sort()
    res = " ".join(userwords)
    print(res)

while choice == "A":
    print("You picked option 'A' (count the number of each letter in the text)")
    qwe = (input("""INPUT YOUR TEXT :
    """)).strip()
    countl(qwe)
    print(countl, "=", qwe)
    print("Program is completed")
    print("CONTINUE - 1")
    print("EXIT - 2")
    choice2 = input("YOUR OPTION : ")
    if choice2 =="2":
        break
    if choice2 == "1":
        choice == "A"
    else: print("Incorrect option")
while choice == "B":
    print("You picked option 'B' (sort words according to vocabulary)")
    qwe = input("""INPUT YOUR TEXT :
    """)
    alphabet(qwe)
    print("Program is completed")
    print("CONTINUE - 1")
    print("EXIT - 2")
    choice3 =  input("YOUR OPTION : ")
    if choice3 =="2":
        break
    if choice3 == "1":
        choice == "B"
    else: print("Uncorrect option")
